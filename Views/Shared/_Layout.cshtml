<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My ASP.NET Core App</title>

    <!-- Link to the CSS file -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#2b93bf;">
        <div class="container">
            <a class="navbar-brand" href="#">Shift Management</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Scheduling System</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Assistants", "Assistants")">Assistants</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Emergency</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Departments", "Departments")">Departments</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Appointments</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Account")">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="hero">
        <div class="gradient-overlay"></div>
        <div class="hero">
             @RenderSection("HeroImage", required: false)
        </div>
        <div class="hero-content">
            <h1>@RenderSection("HeroTitle", required: false)</h1>
            <p>@RenderSection("HeroSubtitle", required: false)</p>
        </div>
    </div>

    <!-- Main Content -->
 
        @RenderBody()
   

    <!-- Footer -->
    <footer class="footer text-center">
        <div class="container">
            <p>&copy; 2024 Pediatrics Shift Management. All Rights Reserved.</p>
            <p><a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a></p>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
